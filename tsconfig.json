{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
	"lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
	"useDefineForClassFields": true,
	"skipLibCheck": true,

	/* Project paths */
	"baseUrl": ".",
	"paths": {
	  "@/*": ["./src/*"]
	},

	/* Bundler mode */
	"moduleResolution": "bundler",
	"moduleDetection": "force",
	"allowImportingTsExtensions": true,
	"verbatimModuleSyntax": true,
	"jsx": "react-jsx",
	"noEmit": true,

	/* Linting */
	"strict": true
  },
  "include": ["src"]
}
